{
  "expo": {
    "name": "Pango Nyumba",
    "slug": "pango-nyumba",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "pango-nyumba",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.pangonyumba.app",
      "infoPlist": {
        "NSCameraUsageDescription": "This app uses the camera to take photos of rental properties.",
        "NSLocationWhenInUseUsageDescription": "This app uses your location to find rental properties near you.",
        "NSPhotoLibraryUsageDescription": "This app requires access to your photo library to upload property images."
      }
    },
    "android": {
      "package": "com.pangonyumba.app",
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "permissions": [
        "CAMERA",
        "ACCESS_FINE_LOCATION",
        "ACCESS_COARSE_LOCATION"
      ]
    },
    "web": {
      "bundler": "metro",
      "output": "single",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      "expo-font",
      "expo-web-browser",
      "expo-camera",
      "expo-image-picker",
      "expo-location",
      [
        "expo-notifications",
        {
          "icon": "./assets/images/notification-icon.png",
          "color": "#1A73E8"
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    }
  }
}